<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/colorPrimary">

    <ScrollView android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

    <ImageView
        android:layout_height="250dp"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/logo"
        android:id="@+id/login_image"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:id="@+id/login_email"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="25dp"
        android:drawableStart="@drawable/email"
        android:padding="4dp"
        android:background="@drawable/edit_field"
        android:inputType="textEmailAddress"
        android:hint="Email..."
        android:textColor="@color/TextColor"
        android:layout_below="@+id/login_image"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:id="@+id/login_password"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_field"
        android:drawableStart="@drawable/password"
        android:padding="4dp"
        android:inputType="textPassword"
        android:hint="Password..."
        android:layout_below="@+id/login_email"
        android:textColor="@color/TextColor"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/forget_password_link"
        android:layout_marginRight="23dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/login_password"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textAlignment="textEnd"
        android:text="Forget Password ?"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:layout_centerInParent="true"
        android:id="@+id/login_button"
        android:layout_marginRight="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:background="@drawable/button"
        android:layout_below="@+id/forget_password_link"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:text="Login"
        android:textAllCaps="false"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/need_new_account_link"
        android:layout_marginRight="23dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/login_button"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textAlignment="center"
        android:text="Need new Account ?"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/login_using"
        android:layout_marginRight="23dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/need_new_account_link"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textSize="17sp"
        android:textAlignment="center"
        android:text="or Login using your"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:layout_centerInParent="true"
        android:id="@+id/phone_login_button"
        android:layout_marginRight="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/phone"
        android:padding="4dp"
        android:background="@drawable/button"
        android:layout_below="@+id/login_using"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:text="Phone"
        android:textAlignment="center"
        android:textAllCaps="false"
        />

</RelativeLayout>

</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>